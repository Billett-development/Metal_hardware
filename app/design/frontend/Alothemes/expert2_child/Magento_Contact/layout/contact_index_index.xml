<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<head>
	<title>Contact Us | Metal Hardware</title>
	<meta name="title" content="Contact Us | Metal Hardware"></meta>
	<meta name="description" content="Looking to get in touch? Give us a call on 0117 937 2846, drop us an email on sales@metalhardware.co.uk or use our handy contact form. We're open 8:00am to 4:30pm Mon-Thurs and 8:00am to 3:30pm Fridays"></meta>
</head>

    <body>
	    <move element="page.main.title" destination="page.top"/>
		<referenceContainer name="sections.page.bottom">
            <container name="contact_map" label="Map" htmlTag="div" htmlClass="block-map" after="content">
                <block class="Magento\Cms\Block\Block" name="block_contact_map">
                    <arguments>
                        <argument name="block_id" xsi:type="string">block_contact_map</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>


</page>
